{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DestinationRecommendations",
  "type": "object",
  "additionalProperties": false,
  "required": ["destinations"],
  "properties": {
    "summary": {
      "type": "string",
      "description": "Short overview of why these places match the user's constraints."
    },
    "destinations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "description": "City/region/destination name, e.g., 'Mexico City'." },
          "country": { "type": "string", "description": "Country, e.g., 'Mexico'." },
          "why_match": { "type": "string", "description": "Why this matches month/budget/interests." },
          "best_months": { "type": "string", "description": "e.g., 'Octâ€“Nov' or 'Year-round'." },
          "highlights": { "type": "array", "items": { "type": "string" } },
          "sample_three_day": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Up to 3 bullet points, one per day.",
            "minItems": 0,
            "maxItems": 3
          },
          "gotchas": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
